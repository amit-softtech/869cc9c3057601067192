<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Type:</strong>
  <%= @question.q_type %>
</p>

<p>
  <strong>Topic:</strong>
  <%= @question.topic.title %>
</p>

<p>
  <strong>User:</strong>
  <%= @question.user.try(:email) %>
</p>


<p>
  <strong>Answers:</strong>
  <% @question.answers.each do |answer| %>
  	<%= answer.answer_field  %>
  <% end %>
</p>


<%= button_to 'Follow User', follow_user_question_path(@question) %> |
<%= button_to 'Follow Topic', follow_topic_question_path(@question) %>


<%= form_with(model: [ @question, @question.answers.build ]) do |form| %>

  <div class="field">
    <%#= form.hidden_field :user_id, current_user %>
    <%#= form.hidden_field :question_id, @question %>
  </div>


  <div class="field">
    <%= form.label :answer_field %>
    <%= form.text_area :answer_field %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>



<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
